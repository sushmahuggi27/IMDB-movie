{{ include('include/userheader.html.twig')}}
 <link href="{{ asset('') }}" rel="stylesheet" />
    <div class ="container">
    <h3>Reviews</h3>   
        <table class="table table-striped table-hover ">
          <link href="{{ asset('') }}" rel="stylesheet" />
      <head>
        <tr> 
          <th>Review ID</th>         
          <th>Rating</th>
          <th>Review</th>
          <th>Movie Name</th>
          <th>User Name</th>
         
          <th>DELETE</th>
        </tr>
      </thead>
      <tbody>
      {%for review in reviews%}
        <tr> 
          <td>{{review.id}}</td>         
          <td>{{review.getRating()}}</td>
          <td>{{review.getReviews()}}</td> 
          <td>{{review.getMovies().getTitle()}}</td>
          <td>{{review.getUser().getName()}}</td>
          <td><a href="{{absolute_url(asset(''))}}deletereview/{{review.id}}" class="btn btn-primary">DELETE</a><td>
        </tr>
        {%else%}
        <tr>
           <td>NO RECORDS FOUND</td>
        <tr>
       {%endfor%}
       
      
      </tbody>
    </table>
    </div>
