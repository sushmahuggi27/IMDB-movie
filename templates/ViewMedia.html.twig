{{ include('include/headers.html.twig')}}
 <link href="{{ asset('') }}" rel="stylesheet" />
    <div class ="container">
    <h3>Media List</h3>
    <a href="{{absolute_url(asset(''))}}addmedia" class="btn btn-primary"> Add Media</a>
    <a class="btn btn-secondary" href="{{absolute_url(asset(''))}}editmovies">GO BACK </a>
      <table class="table table-striped table-hover ">
        <link href="{{ asset('') }}" rel="stylesheet" />
      <head>
        <tr>
          <th>Media ID</th>
          <th>Name</th>
          <th>IMAGE</th>
          <th>VEDIO</th>
          <th>UPDATE</th>
          <th>DELETE</th>
        </tr>
      </thead>
      <tbody>
      {%for media in media%}
        <tr>
          <td>{{media.id}}</td>
          <td>{{media.name}}</td>
          <td><img  src="{{absolute_url(asset(''))}}MediaImage/{{media.image}}" width="100%" height="100%"></td>  
          <td><iframe width="500" height="300" src="{{media.vedio}}" title=\"YouTube video player\" frameborder=\"0\" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
          </iframe></td>
          <td> <a href="{{absolute_url(asset(''))}}updatemedia/{{media.id}}" class="btn btn-primary">UPDATE </a></td>
          <td> <a href="{{absolute_url(asset(''))}}deletemedia/{{media.id}}" class="btn btn-primary">DELETE</a><td>
              </tr>
        {%else%}
            <tr>
                <td>NO RECORDS FOUND</td>
            <tr>
       {%endfor%}
      </tbody>
    </table>
    </div>


